<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textViewStyle">@style/Theme.MovieApp.TextViewStyle</item>
        <item name="android:windowBackground">@color/background_color</item>
        <!-- Splash screen. -->

    </style>

    <style name="Theme.MovieApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieApp</item>
    </style>


    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="color">#dddddd</item>
    </style>


    <style name="Theme.MovieApp.HeaderStyle"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MovieApp.TextViewStyle"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MovieApp.CardViewStyle"
        parent="Widget.MaterialComponents.CardView">
        <item name="backgroundColor">@color/background_color</item>
    </style>

</resources>